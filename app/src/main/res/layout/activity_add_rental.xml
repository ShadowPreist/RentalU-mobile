<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RentalU"
                android:textSize="40sp"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <ImageView
                android:layout_width="137dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@mipmap/rental_logo"
                android:contentDescription="RentalU Logo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Property Type"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="@color/elements">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp">
                </TextView>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Property Type (required)"
                    android:id="@+id/propertyType"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Bedrooms"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="@color/elements">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp">
                </TextView>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter total number of bedrooms (required)"
                    android:id="@+id/txtBedroom"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Rental Price"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="@color/elements">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp">
                </TextView>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="000.00 S$ (required)"
                    android:id="@+id/price"
                    android:layout_marginLeft="5dp">
                </EditText>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Furniture Type"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="@color/elements">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp">
                </TextView>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Furniture Type(optional)"
                    android:id="@+id/furnitureType"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Reporter's Name"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="@color/elements">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp">
                </TextView>
                <EditText
                    android:id="@+id/reporter"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Mr/Mrs(required)"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="@color/elements">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp">
                </TextView>
                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter the apartment's address(required)"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Phone No:"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="@color/elements">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp">
                </TextView>
                <EditText
                    android:id="@+id/phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your contact number(required)"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp">
                </EditText>
            </LinearLayout>


            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Remark"
                android:textSize="20dp"
                android:padding="5dp"
                android:textColor="@color/elements">
            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">



                <EditText
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Place your thoughts here(optional)"
                    android:layout_marginBottom="15dp">

                </EditText>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF6347"
                    android:textSize="20dp"
                    android:text="Submit"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    >
                </Button>
                <Button
                    android:id="@+id/btnView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Go Back to View Page"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#3F51B1"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>